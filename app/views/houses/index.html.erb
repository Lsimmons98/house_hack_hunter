<h1> <%= link_to "Deals Index Page", deals_path %></h1><br>

<h1> All Houses </h1>

<% @houses.each do |house| %>
  <h3><%= link_to house.address, house_path(house) %><br></h3>
    <ul>
      <li>List Price: $<%= house.list_price %></li>
      <li>Year Built: <%= house.year_built %></li>
    </ul>
  <% end %>

<h2> Add New House </h2>

<% if @house.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@house.errors.count, "error") %> prohibited this house from being saved:</h2>
    <ul>
      <% @house.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @house, local: true) do |f| %>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :list_price %>
    <%= f.number_field :list_price, step: 0.01 %>
  </div>

  <div class="field">
    <%= f.label :annual_property_taxes %>
    <%= f.number_field :annual_property_taxes, step: 0.01 %>
  </div>

  <div class="field">
    <%= f.label :year_built %>
    <%= f.number_field :year_built %>
  </div>
  <p>-----------------------------------------------------------------</p>

   <h3>Units</h3>
  <%= f.fields_for :units do |unit_form| %>
    <div style="margin-bottom: 20px">

      <div class="field">
        <%= unit_form.label :bedrooms, "Number of Bedrooms" %>
        <%= unit_form.number_field :bedrooms %>
      </div>

      <div class="field">
        <%= unit_form.label :bathrooms, "Number of Bathrooms" %>
        <%= unit_form.number_field :bathrooms %>
      </div>

      <div class="field">
        <%= unit_form.label :monthly_rent, "Monthly Rent" %>
        <%= unit_form.number_field :monthly_rent, step: 0.01 %>
      </div>

      <div class="field">
        <%= unit_form.check_box :_destroy %>
        <%= unit_form.label :_destroy, "Remove Unit" %>
      </div>
    </div>
    <p>-----------------------------------------------------------------</p>
  <% end %>

  <div class="actions">
    <%= f.submit "Create House" %>
  </div>
<% end %>
